<h1 style="text-align: center;">Create New Delivery</h1>

<div class="form-container">
  <%= form_with(model: @delivery, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :delivery_date, "Delivery Date", class: "form-label" %>
      <%= form.datetime_select :delivery_date, class: "form-input" %>
      <% if @delivery.errors[:delivery_date].any? %>
        <div class="alert-danger">
          <ul>
            <% @delivery.errors[:delivery_date].each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :order_id, "Order", class: "form-label" %>
      <%= form.collection_select :order_id, Order.all, :id, :to_s_for_collapse_choice, prompt: "Select an order", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :vehicle_id, "Vehicle", class: "form-label" %>
      <%= form.collection_select :vehicle_id, Vehicle.all, :id, :to_s_for_collapse_choice, prompt: "Select a vehicle", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :driver_id, "Driver", class: "form-label" %>
      <%= form.collection_select :driver_id, Driver.all, :id, :to_s_for_collapse_choice, prompt: "Select a driver", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :status, "Status", class: "form-label" %>
      <%= form.select :status, ['pending', 'shipped', 'delivered', 'canceled'], {}, class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Create Delivery", class: "btn btn-primary" %>
      <%= link_to 'Back to Deliveries List', deliveries_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
