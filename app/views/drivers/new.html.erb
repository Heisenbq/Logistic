<h1 style="text-align: center;">Create New Driver</h1>

<div class="form-container">
  <%= form_with(model: @driver, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :first_name, "First Name", class: "form-label" %>
      <%= form.text_field :first_name, placeholder: "Enter first name", class: "form-input" %>
      <% if @driver.errors[:first_name].any? %>
        <div class="alert-danger">
          <ul>
            <% @driver.errors[:first_name].each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :last_name, "Last Name", class: "form-label" %>
      <%= form.text_field :last_name, placeholder: "Enter last name", class: "form-input" %>
      <% if @driver.errors[:last_name].any? %>
        <div class="alert-danger">
          <ul>
            <% @driver.errors[:last_name].each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :license_number, "License Number", class: "form-label" %>
      <%= form.text_field :license_number, placeholder: "Enter license number", class: "form-input" %>
      <% if @driver.errors[:license_number].any? %>
        <div class="alert-danger">
          <ul>
            <% @driver.errors[:license_number].each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :phone_number, "Phone Number", class: "form-label" %>
      <%= form.text_field :phone_number, placeholder: "Enter phone number", class: "form-input" %>
      <% if @driver.errors[:phone_number].any? %>
        <div class="alert-danger">
          <ul>
            <% @driver.errors[:phone_number].each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :employment_date, "Employment Date", class: "form-label" %>
      <%= form.date_select :employment_date, class: "form-input" %>
      <% if @driver.errors[:employment_date].any? %>
        <div class="alert-danger">
          <ul>
            <% @driver.errors[:employment_date].each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="form-actions">
      <%= form.submit "Create Driver", class: "btn btn-primary" %>
      <%= link_to 'Back to Drivers List', drivers_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
