<h1 style="text-align: center;">Drivers</h1>

<div style="text-align: center; margin-bottom: 20px;">
  <%= link_to 'Create Driver', new_driver_path, class: 'btn btn-primary' %>
  <%= link_to 'Back to home page', "pages/home", class: 'btn btn-primary' %>
</div>

<table class="drivers-table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>License Number</th>
      <th>Phone Number</th>
      <th>Employment Date</th>
      <th>Show more info</th>
    </tr>
  </thead>
  <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= driver.first_name %></td>
        <td><%= driver.last_name %></td>
        <td><%= driver.license_number %></td>
        <td><%= driver.phone_number %></td>
        <td><%= driver.employment_date %></td>
        <td>
          <%= link_to 'Show', driver, class: 'btn btn-info' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
