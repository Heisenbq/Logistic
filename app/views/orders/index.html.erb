<h1 style="text-align: center;">Orders</h1>

<div style="text-align: center; margin-bottom: 20px;">
  <%= link_to 'Create Order', new_order_path, class: 'btn btn-primary' %>
  <%= link_to 'Back to home page', "pages/home", class: 'btn btn-primary' %>
</div>

<table class="orders-table">
  <thead>
    <tr>
      <th>Order Date</th>
      <th>Delivery Address</th>
      <th>Customer Name</th>
      <th>Status</th>
      <th>Show more info</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_date.strftime("%Y-%m-%d %H:%M:%S") if order.order_date %></td>
        <td><%= order.delivery_address %></td>
        <td><%= order.customer_name %></td>
        <td><%= order.status %></td>
        <td>
          <%= link_to 'Show', order, class: 'btn btn-info' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

